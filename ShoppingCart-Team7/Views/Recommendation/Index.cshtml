@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    List<Product> TopProdByPurchase = (List<Product>)ViewData["TopProdByPurchase"];
    List<Product> TopProdByRatings = (List<Product>)ViewData["TopProdByRatings"];
}
<style>
    a:link, a:hover, a:visited, a:active {
        text-decoration: none;
        color: black;
    }

    .bestsellers {
        margin-bottom: 20px;
    }

</style>

<div class="recommendations">
    <div class="bestsellers">
        <h5>Best Sellers</h5>
        <div class="row">
            @{
                foreach (Product bs in TopProdByPurchase)
                {
                    string imgSrc = "/Images" + bs.ImageSrc;
                    <div class="col-sm">
                        <div class="card">
                            <a href = "~/Product/Details/@bs.Id">
                            <img class="card-img-top" src=@imgSrc alt=@bs.ProductName />
                            <div class="card-body">
                                <h6 class="card-title">@bs.ProductName</h6>
                            </div>
                            </a>
                            <button type="button" class="btn btn-light"><b>$@bs.Price</b><i class="fas fa-shopping-cart"></i></button>
                        </div>
                    </div>
                }
            }
        </div>
    </div>

    <div class="toprated">
        <h5>Top Rated E-Books</h5>
        <div class="row">
            @{
                foreach (Product ts in TopProdByRatings)
                {
                    string imgSrc = "/Images" + ts.ImageSrc;
                    <div class="col-sm">
                        <div class="card">
                            <a href="~/Product/Details/@ts.Id">
                            <img class="card-img-top" src=@imgSrc alt=@ts.ProductName />
                            <div class="card-body">
                                <h6 class="card-title">@ts.ProductName</h6>
                            </div>
                            </a>
                            <button type="button" class="btn btn-light"><b>$@ts.Price</b><i class="fas fa-shopping-cart"></i></button>
                        </div>
                    </div>
                }
            }
        </div>
    </div>
 </div>

