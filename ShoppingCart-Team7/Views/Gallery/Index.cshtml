@{
    List<Product> ProductList = (List<Product>)ViewData["productlist"];
    string searchstring = (string)ViewData["searchstring"];
}

<style>
    .card {
        margin-bottom: 8px;
        padding: 10px;
    }

    .galleryimage {
        height: 100px;
        width: 100px;
        outline: 3px solid black;
        align
    }

    .searchbar {
        width: 100%;
        border-radius: 8px;
    }

    .gallery-buy-button {
        border-radius: 8px;
    }
</style>

<div class="">
    <div class="form-group">
        <form action="/Gallery/" method="POST">
            <input class="form-text; searchbar" type="text" name="searchstring" placeholder="Search" value="@searchstring" />
        </form>
    </div>
    <div class="row">
        @{
            foreach (var product in ProductList)
            {
                <div class="col-sm-6 col-md-4 col-lg-3">
                    <div class="card">
                        <img src="#" alt="@product.ImageSrc" />
                        <h5>@product.ProductName</h5>
                        <p>@product.Description</p>
                        <button class="btn-dark gallery-buy-button">@product.Price Add to Cart</button>
                    </div>
                </div>
            }
        }
    </div>
</div>
