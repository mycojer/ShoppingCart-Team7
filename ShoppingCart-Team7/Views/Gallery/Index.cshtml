@{
    List<Product> ProductList = (List<Product>)ViewData["productlist"];
    string searchstring = (string)ViewData["searchstring"];
}

<h2>Products</h2>

<div class="">
    <div class="form-group">
        <form action="/Gallery/" method="POST">
            <input class="form-text; searchbar" type="text" name="searchstring" placeholder="Search" value="@searchstring" />
        </form>
    </div>
    <div class="row">
        @{
            foreach (var product in ProductList)
            {
                <div class="col-sm-12 col-md-6 col-lg-4">
                    <div class="gallery-card card">
                        <a href="~/ProductDetail/Index/@product.Id">
                            <img src="@product.ImageSrc" alt="@product.ProductName book cover" class="gallery-pic" />
                            <h5 class="text-truncate card-title">@product.ProductName</h5>
                            <div class="gallery-description card-text">
                                <p>@product.Description</p>
                            </div>
                        </a>
                        <a href="~/addtocart/@product.Id"><button class="btn-dark btn-block gallery-buy-button">$@product.Price Add to Cart</button></a>

                    </div>
                </div>

            }
        }
    </div>
</div>
